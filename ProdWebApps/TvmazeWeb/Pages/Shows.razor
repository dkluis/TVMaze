@page "/shows"


@using TVMazeWeb.Data
@inject WebShows WebShowsService


@code {
    AppInfo appinfo = new("Tvmaze", "WebUI", "DbAlternate");
    private List<ShowsInfo> showsInfoList = new();
    string SearchString;

    private void ReviewNewShows()
    {
        showsInfoList = WebShowsService.GetShowsByTvmStatus(appinfo, "New");
        SearchString = "";
    }

    private void ReviewReviewShows()
    {
        showsInfoList = WebShowsService.GetShowsByTvmStatus(appinfo, "Reviewing");
        SearchString = "";
    }

    private void FindShows()
    {
        showsInfoList = WebShowsService.FindShows(appinfo, SearchString);
    }

    private void EditShow(ShowsInfo si)
    {
        if (si.TvmStatus == "New")
        {
            appinfo.TxtFile.Write($"Editing Show to Reviewing {si.TvmShowId}: {si.ShowName}");
            bool result = WebShowsService.SetTvmStatusShow(appinfo, si.TvmShowId, "Reviewing");
            SearchString = si.ShowName;
            FindShows();
            SearchString = "";
        }
        else if (si.TvmStatus == "Following")
        {
            appinfo.TxtFile.Write($"Editing Show {si.TvmShowId}: {si.ShowName} setting MediaType to {si.MediaType} and AltShowName to {si.AltShowName}");
            bool result = WebShowsService.SetMtAndAsnShow(appinfo, si.TvmShowId, si.MediaType, si.AltShowName);
            SearchString = si.ShowName;
            FindShows();
            SearchString = "";
        }
    }

    private void DeleteShow(ShowsInfo si)
    {
        appinfo.TxtFile.Write($"Deleting Show {si.TvmShowId}: {si.ShowName}");
        bool result = WebShowsService.DeleteShow(appinfo, si.TvmShowId);
        SearchString = si.ShowName;
        FindShows();
        SearchString = "";
    }

}

<h1>Shows</h1>
<em>To Follow or Unfollow a show use the TVMaze link</em>
<br />
<button class="btn btn-primary" @onclick="ReviewNewShows">New Shows</button>
<button class="btn btn-primary" @onclick="ReviewReviewShows">Review Shows</button>
<div>
    <div class="input-group mb-3">
        <button class="btn btn-primary" @onclick="FindShows">Find Shows</button>
        <div class="input-group-prepend">
            <span class="input-group-text">%</span>
        </div>
        <input @bind="SearchString" />
        <div class="input-group-append">
            <span class="input-group-text">%</span>
        </div>
    </div>
</div>

<p></p>

<div>
    <h6>Shows - Table</h6>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Show Id</th>
                <th>Name</th>
                <th>Url</th>
                <th>Alt Name</th>
                <th>Finder</th>
                <th>Media Type</th>
                <th>Status</th>
                <th>ShowStatus</th>
                <th>Update Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (ShowsInfo si in showsInfoList)
            {
                <tr>
                    <td>@si.TvmShowId</td>
                    <td>@si.ShowName</td>
                    <td> <a href="@si.TvmUrl" target="_blank">TVMaze</a> </td>
                    <td>@if (si.TvmStatus == "Following") {<input @bind="si.AltShowName" size="60" /> } else {@si.AltShowName}</td>
                    <td>@si.Finder</td>
                    <td>@if (si.TvmStatus == "Following") {<input @bind="@si.MediaType" size="6" /> } else {@si.MediaType}</td>
                    <td>@si.TvmStatus</td>
                    <td>@si.ShowStatus</td>
                    <td>@si.UpdateDate.Substring(0, 10)</td>
                    <td>
                        @if (si.TvmStatus != "Reviewing")
                            if (si.TvmStatus == "New")
                            {<button class="btn btn-secondary" @onclick="@(() => EditShow(si))">Set Reviewing</button>}
                            else
                            { <button class="btn btn-secondary" @onclick="@(() => EditShow(si))">Submit Edit</button>}
                        @if (@si.TvmStatus != "Following")
                        {<button class="btn btn-secondary" @onclick="@(() => DeleteShow(si))">Delete</button>}
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


